!!!
%html
%head
	%title SpotKing
	= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	%link{:rel => "stylesheet", :href => "https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css"}
	%link{:rel => "stylesheet", :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"}
	= csrf_meta_tags
%body
	%header
		.container	
			.wrapper.clearfix
				#logo= link_to "SpotKing", root_path
				%nav
					- if user_signed_in?
						= link_to current_user.name, edit_user_registration_path
						%br/
						= link_to "Tricks", tricks_path, class: "button"
						= link_to "Spots", spots_path, class: "button"
						%br/
						= link_to "Add Tricks", new_trick_path, class: "button"
						%br/
						= link_to "Sign Out", destroy_user_session_path, :method => :delete 
						<br/>
						Followers
						= link_to current_user.follow_count, users_list_path
						Following
						= link_to current_user.followers_count, users_list_path
					- else

			%p.notice= notice
			%p.alert= alert
		
			= yield
