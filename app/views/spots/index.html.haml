- if user_signed_in?
	%p#intro
		Hello
		= current_user.name
		%br/
		%span
			Pick a Spot
- else
	%p#intro
		Wanna be king?
		%br/
		%span
#map_wrapper
	#map_canvas

#tricks
	- @spots.each do |spot|
		%h2= link_to spot.title, spot
		Uploads:
		= link_to spot.tricks.size, spot
		|
		Longitude:
		= link_to spot.longitude, spot, class: "coords"
		|
		Latitude:
		= link_to spot.latitude, spot, class: "coords"
