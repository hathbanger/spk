%h1= @user.name
= image_tag @user.avatar(:medium)
%br/
Following: 
= @user.follow_count
%br/
Followers: 
= @user.followers.size
%br/
- if current_user.following?(@user)
	= link_to "Unfollow", follow_user_path(@user)
- else
	= link_to "Follow", unfollow_user_path(@user)
#tricks
	User Posts
	%br/
	- @user.tricks.each do |trick|
		= link_to (image_tag trick.image.url(:small)), trick
		%h2= link_to trick.title, trick

		%P
			= trick.comments.count
			Comments
		%p
			= trick.get_likes.size
			likes
			
			= trick.get_dislikes.size
			dislikes


%div#map_canvas